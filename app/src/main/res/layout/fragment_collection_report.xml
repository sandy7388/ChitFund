<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="02dp">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/button_border"
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18dp"
                android:padding="03sp"
                android:gravity="center"
                android:text="Ticket No"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"/>
            <TextView
                android:textSize="18dp"
                android:padding="03sp"
                android:gravity="center"
                android:text="Auction No"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"/>
            <TextView
                android:textSize="18dp"
                android:padding="03sp"
                android:gravity="center"
                android:text="Member Name"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"/>
            <TextView
                android:textSize="18dp"
                android:padding="03sp"
                android:gravity="center"
                android:text="Collection Type"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"/>
            <TextView
                android:textSize="18dp"
                android:padding="03sp"
                android:gravity="center"
                android:text="Amount"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"/>
            <TextView
                android:textSize="18dp"
                android:padding="03sp"
                android:gravity="center"
                android:text="Cheque No"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"/>
            <TextView
                android:textSize="18dp"
                android:padding="03sp"
                android:gravity="center"
                android:text="Cheque Date"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"/>
            <TextView
                android:textSize="18dp"
                android:padding="03sp"
                android:gravity="center"
                android:text="Bank Name"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"/>
            <TextView
                android:textSize="18dp"
                android:padding="03sp"
                android:gravity="center"
                android:text="Receipt No"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"/>
            <TextView
                android:textSize="18dp"
                android:padding="03sp"
                android:gravity="center"
                android:text="Receipt Date"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />


        </LinearLayout>

    </HorizontalScrollView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewCollectionReport"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>



</LinearLayout>