<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/swipeToRefreshAdvanceReport"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="02dp">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_border"
            android:orientation="vertical"
            android:visibility="visible"
            android:weightSum="10">

            <LinearLayout
                android:background="@drawable/button_border"
                android:weightSum="6"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="18dp"
                    android:padding="03sp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Ticket No."
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"/>
                <TextView
                    android:textSize="18dp"
                    android:padding="03sp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Member Name"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"/>
                <TextView
                    android:textSize="18dp"
                    android:padding="03sp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Collection Type"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"/>
                <TextView
                    android:textSize="18dp"
                    android:padding="03sp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Amount"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"/>

                <TextView
                    android:textSize="18dp"
                    android:padding="03sp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Receipt No"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"/>
                <TextView
                    android:textSize="18dp"
                    android:padding="03sp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Receipt Date"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />


            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewAdvanceReport"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </HorizontalScrollView>

</android.support.v4.widget.SwipeRefreshLayout>