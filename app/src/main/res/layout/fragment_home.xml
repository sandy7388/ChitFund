<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="05dp"
    android:orientation="vertical"
    tools:context="chitfund.wayzontech.chitfund.chitfund.fragment.HomeFragment">

    <LinearLayout
        android:layout_marginTop="5sp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18sp"
            android:layout_weight="1"
            android:text="Wel-come:"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" />

        <TextView
            android:textSize="18sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Wel-come"
            android:id="@+id/textName" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5sp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18sp"
            android:layout_weight="1"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:text="Date:"
            android:id="@+id/textView4" />

        <TextView
            android:textSize="18sp"
            android:layout_weight="1"
            android:id="@+id/textDate"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:text="Date" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5sp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18sp"
            android:layout_weight="1"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:text="Time:" />

        <DigitalClock
            android:textSize="18sp"
            android:layout_weight="1"
            android:id="@+id/textTime"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:text="Time"/>

    </LinearLayout>

    <View
        android:visibility="gone"
        android:layout_marginTop="05dp"
        android:layout_width="match_parent"
        android:layout_height="01sp"
        android:background="@color/colorPrimary"/>

    <ScrollView
        android:layout_marginTop="05dp"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@drawable/button_border"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linear_auction"
                android:layout_below="@+id/linear_customer"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:background="@drawable/button_border1"
                    android:id="@+id/lnr_report"
                    android:layout_margin="10sp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:weightSum="2">

                    <ImageView
                        android:src="@drawable/auction_1"
                        android:layout_width="match_parent"
                        android:layout_height="50sp" />
                    <TextView
                        android:textColor="#fff"
                        android:gravity="center"
                        android:text="Auction"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:background="@drawable/button_border1"
                    android:id="@+id/lnr_groupList"
                    android:layout_margin="10sp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:weightSum="2">

                    <ImageView
                        android:src="@drawable/group_list_1"
                        android:layout_width="match_parent"
                        android:layout_height="50sp" />
                    <TextView
                        android:textColor="#ffffff"                        android:gravity="center"
                        android:text="Group List"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/linear_customer"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:background="@drawable/button_border1"
                    android:id="@+id/lnr_joinedGroup"
                    android:layout_margin="10sp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:weightSum="2">

                    <ImageView
                        android:src="@drawable/networking_1"
                        android:layout_width="match_parent"
                        android:layout_height="50sp" />
                    <TextView
                        android:textColor="#fff"
                        android:gravity="center"
                        android:text="Joined Group"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:background="@drawable/button_border1"
                    android:id="@+id/lnr_last_auction"
                    android:layout_margin="10sp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:weightSum="2">

                    <ImageView
                        android:src="@drawable/reply"
                        android:layout_width="match_parent"
                        android:layout_height="50sp" />
                    <TextView
                        android:textColor="#ffffff"                        android:gravity="center"
                        android:text="Last Auction"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear_report"
                android:layout_below="@+id/linear_customer"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:background="@drawable/button_border1"
                    android:id="@+id/lnr_notificaion"
                    android:layout_margin="10sp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:weightSum="2">

                    <ImageView
                        android:src="@drawable/notification_1"
                        android:layout_width="match_parent"
                        android:layout_height="50sp" />
                    <TextView
                        android:textColor="#fff"
                        android:gravity="center"
                        android:text="Notifications"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:background="@drawable/button_border1"
                    android:id="@+id/lnr_profile"
                    android:layout_margin="10sp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:weightSum="2">

                    <ImageView
                        android:src="@drawable/user_2"
                        android:layout_width="match_parent"
                        android:layout_height="50sp" />
                    <TextView
                        android:textColor="#ffffff"                        android:gravity="center"
                        android:text="Profile"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
